@page "/config/{ConfigType}"
@using CSConfigGenerator.Components
@using CSConfigGenerator.Components.Dynamic
@using CSConfigGenerator.Interfaces
@using CSConfigGenerator.ViewModels
@using CSConfigGenerator.Services
@implements IDisposable

<PageTitle>@Title</PageTitle>

<div class="row g-1 h-100">
    <div class="col-lg-8">
        <div class="p-3">
            <h1>@Title</h1>
            <p class="text-muted">Configure your @ConfigType settings. Changes are reflected in real-time in the config editor.</p>

            @if (Sections.Any())
            {
                @foreach (var section in Sections)
                {
                    var viewModels = section.Commands
                        .Where(c => !c.UiData.HideFromDefaultView)
                        .Select(c => _settingViewModels[c.Command])
                        .ToList();

                    <ConfigSectionGroup Section="section" SettingViewModels="viewModels" />
                }

                <div class="mb-3">
                    <button class="btn btn-secondary" @onclick="ResetToDefaults">
                        Reset to Defaults
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>No Commands Loaded</h4>
                    <p>No command definitions were found. Make sure your schema files are properly configured.</p>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-4 h-100">
        <ConfigEditor ConfigStateService="@ConfigStateService" PresetType="@ConfigType" />
    </div>
</div>

@code {
    [Parameter]
    public string ConfigType { get; set; } = "player";

    [Inject]
    private IKeyedServiceProvider ServiceProvider { get; set; } = default!;
    [Inject]
    public ISchemaService SchemaService { get; set; } = default!;
    [Inject]
    public IToastService ToastService { get; set; } = default!;

    private IConfigStateService ConfigStateService { get; set; } = default!;
    private readonly Dictionary<string, SettingViewModel> _settingViewModels = new();
    private List<ConfigSections> Sections = new();
    private string Title = "";

    protected override void OnParametersSet()
    {
        var serviceKey = ConfigType.Equals("player", StringComparison.OrdinalIgnoreCase)
            ? "PlayerConfigStateServiceKey"
            : "ServerConfigStateServiceKey";

        ConfigStateService = ServiceProvider.GetRequiredKeyedService<IConfigStateService>(serviceKey);

        Sections = ConfigType.Equals("player", StringComparison.OrdinalIgnoreCase)
            ? SchemaService.PlayerSections
            : SchemaService.ServerSections;

        Title = ConfigType.Equals("player", StringComparison.OrdinalIgnoreCase)
            ? "Player Settings"
            : "Server Settings";

        ConfigStateService.OnStateChange += HandleStateHasChanged;

        foreach (var section in Sections)
        {
            foreach (var command in section.Commands.Where(c => !c.UiData.HideFromDefaultView))
            {
                _settingViewModels[command.Command] = new SettingViewModel(command, ConfigStateService);
            }
        }
    }

    private void HandleStateHasChanged(object? originator)
    {
        StateHasChanged();
    }

    private void ResetToDefaults()
    {
        ConfigStateService.ResetToDefaults();
        ToastService.ShowToast($"{Title} reset to default values.", ToastLevel.Info);
    }

    public void Dispose()
    {
        ConfigStateService.OnStateChange -= HandleStateHasChanged;
    }
}
