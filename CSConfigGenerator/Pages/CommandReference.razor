@page "/reference"
@using CSConfigGenerator.Models
@using CSConfigGenerator.Interfaces
@using CSConfigGenerator.Components
@inject IConfigStateService ConfigStateService
@inject ISchemaService SchemaService
@inject IToastService ToastService

<PageTitle>Command Reference</PageTitle>

<div class="row g-0 h-100">
    <div class="col-lg-8 pe-2">
        <h1>Command Reference</h1>
        <p class="text-muted">Browse, search, and manage all available commands for your configuration.</p>
        <div class="card bg-light mb-2">
            <div class="card-body p-2">
                <div class="row g-2 align-items-center">
                    <div class="col-md-6">
                        <div class="search-input-wrapper">
                            <div class="autocomplete-wrapper">
                                <input class="autocomplete-ghost" type="text" value="@GhostText" readonly tabindex="-1" />
                                <input
                                    @oninput="OnSearchInput"
                                    @onkeydown="HandleKeyDown"
                                    @onkeydown:preventDefault="tabCompletionPreventDefault"
                                    value="@searchTerm"
                                    class="autocomplete-input form-control form-control-sm"
                                    placeholder="Search commands..."
                                    autocomplete="off" />
                            </div>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <button class="search-clear-btn btn btn-sm" @onclick="ClearSearch" type="button">
                                    <i class="bi bi-x"></i>
                                </button>
                            }
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="dropdown filter-dropdown">
                            <button class="btn btn-sm btn-light dropdown-toggle w-100 filter-button text-start" type="button" @onclick="() => showTypeDropdown = !showTypeDropdown" aria-expanded="@showTypeDropdown">
                                @GetTypeFilterText()
                            </button>
                            <ul class="dropdown-menu @(showTypeDropdown ? "show" : "")" style="width: 100%;">
                                @foreach (var type in Enum.GetValues<SettingType>())
                                {
                                    <li>
                                        <div class="dropdown-item px-2" @onclick:stopPropagation="true">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="type-@type" @bind="selectedTypes[type]" @bind:after="ApplyFilters" />
                                                <label class="form-check-label" for="type-@type">@type</label>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="filter-checkbox-wrapper">
                            <div class="form-check form-switch d-flex flex-column align-items-center justify-content-center">
                                <label class="form-check-label" for="cheatsFilter">Cheats Only</label>
                                <input @bind="requiresCheatsFilter" @bind:after="ApplyFilters" class="form-check-input" type="checkbox" role="switch" id="cheatsFilter" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-sm btn-outline-danger w-100 filter-clear-btn" @onclick="ClearFilters" disabled="@(!isAnyFilterActive)">
                            Clear Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @if (paginatedCommands.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped table-hover command-table">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var command in paginatedCommands)
                        {
                            <tr @onclick="() => selectedCommand = command" class="@(selectedCommand == command ? "table-active" : "")">
                                <td><code><HighlightText Text="@command.Command" Highlight="@searchTerm" /></code></td>
                                <td><HighlightText Text="@command.UiData.HelperText" Highlight="@searchTerm" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangePage(-1)" disabled="@(currentPage <= 1)">Previous</button>
                <span>Page @currentPage of @totalPages</span>
                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangePage(1)" disabled="@(currentPage >= totalPages)">Next</button>
            </div>
        }
        else
        {
            <p>No commands found matching your criteria.</p>
        }
    </div>
    <div class="col-lg-4 sticky-editor">
        <ConfigEditor PresetType="player" />
    </div>
</div>

@code {
    // Private fields - no need for complex properties
    private string searchTerm = string.Empty;
    private bool requiresCheatsFilter;
    private Dictionary<SettingType, bool> selectedTypes = new();
    private bool showTypeDropdown = false;
    private bool isAnyFilterActive = false;

    private List<CommandDefinition> allCommands = [];
    private List<CommandDefinition> paginatedCommands = [];
    private CommandDefinition? selectedCommand;
    private int currentPage = 1;
    private int totalPages = 1;
    private const int PageSize = 50;

    private string? currentSuggestion;
    private bool tabCompletionPreventDefault = false;
    private string? GhostText =>
        (!string.IsNullOrEmpty(currentSuggestion) && !string.IsNullOrEmpty(searchTerm) && currentSuggestion.StartsWith(searchTerm, StringComparison.OrdinalIgnoreCase))
        ? searchTerm + currentSuggestion.Substring(searchTerm.Length)
        : null;

    protected override void OnInitialized()
    {
        foreach (var type in Enum.GetValues<SettingType>()) {
            selectedTypes.Add(type, false);
        }

        ConfigStateService.OnStateChange += HandleStateChanged;

        // Initialize with all commands from the unified service
        InitializeCommands();
        ApplyFilters();
    }

    private void HandleStateChanged(object? originator)
    {
        InvokeAsync(() =>
        {
            ApplyFiltersWithoutPageReset();
            StateHasChanged();
        });
    }

    private void InitializeCommands()
    {
        IEnumerable<CommandDefinition> commands = SchemaService.Commands.OrderBy(c => c.Command);
        allCommands = commands.ToList();
    }

    public void Dispose()
    {
        ConfigStateService.OnStateChange -= HandleStateChanged;
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        ApplyFilters();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        currentSuggestion = null;
        ApplyFilters();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        tabCompletionPreventDefault = false;
        if (e.Key == "Tab" && !string.IsNullOrEmpty(currentSuggestion))
        {
            searchTerm = currentSuggestion;
            currentSuggestion = null;
            tabCompletionPreventDefault = true;
        }
    }

    private void ApplyFilters()
    {
        currentPage = 1;
        ApplyFiltersInternal();
    }

    private void ApplyFiltersWithoutPageReset()
    {
        // Preserve the current page, but make sure it's still valid after filtering
        int originalPage = currentPage;
        ApplyFiltersInternal();

        // Check if the original page is still valid after filtering
        if (originalPage <= totalPages && originalPage > 0)
        {
            currentPage = originalPage;
            var filtered = GetFilteredCommands();
            UpdatePagination(filtered);
        }
    }

    private void ApplyFiltersInternal()
    {
        // Update autocomplete suggestion
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            currentSuggestion = allCommands
                .FirstOrDefault(c => c.Command.StartsWith(searchTerm, StringComparison.OrdinalIgnoreCase))
                ?.Command;
        }
        else
        {
            currentSuggestion = null;
        }

        var filtered = GetFilteredCommands();
        totalPages = (int)Math.Ceiling(filtered.Count / (double)PageSize);
        UpdatePagination(filtered);
        UpdateFilterActiveStatus();
    }

    private void UpdateFilterActiveStatus()
    {
        isAnyFilterActive = !string.IsNullOrEmpty(searchTerm) ||
                            requiresCheatsFilter ||
                            selectedTypes.Any(st => st.Value);
    }

    private List<CommandDefinition> GetFilteredCommands()
    {
        return allCommands
            .Where(c => string.IsNullOrWhiteSpace(searchTerm) ||
                        c.Command.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                        c.UiData.HelperText.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            .Where(c => !selectedTypes.Any(st => st.Value) ||
                        selectedTypes.Where(st => st.Value).Select(st => st.Key).Contains(c.UiData.Type))
            .Where(c => !requiresCheatsFilter || c.UiData.RequiresCheats)
            .ToList();
    }

    private void UpdatePagination(List<CommandDefinition> commands)
    {
        paginatedCommands = commands
            .Skip((currentPage - 1) * PageSize)
            .Take(PageSize)
            .ToList();
    }

    private void ChangePage(int amount)
    {
        var newPage = currentPage + amount;
        if (newPage >= 1 && newPage <= totalPages)
        {
            currentPage = newPage;
            var filtered = GetFilteredCommands();
            UpdatePagination(filtered);
        }
    }

    private void ClearFilters()
    {
        searchTerm = string.Empty;
        requiresCheatsFilter = false;

        // Clear all type selections
        foreach (var key in selectedTypes.Keys.ToList())
        {
            selectedTypes[key] = false;
        }

        showTypeDropdown = false;
        currentSuggestion = null;
        ApplyFilters();
    }

    private string GetTypeFilterText()
    {
        var selectedCount = selectedTypes.Count(st => st.Value);
        return selectedCount switch
        {
            0 => "All Types",
            1 => selectedTypes.First(st => st.Value).Key.ToString(),
            _ => $"{selectedCount} Types"
        };
    }
}
