@using CSConfigGenerator.Models
@using CSConfigGenerator.ViewModels
@using CSConfigGenerator.Services
@using CSConfigGenerator.Components.Dynamic
@inject IConfigStateService ConfigState

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">@Section.DisplayName</h5>
    </div>
    <div class="card-body">
        @foreach (var command in Section.Commands.OrderBy(c => c.Name))
        {
            var viewModel = new SettingViewModel(command, ConfigState);
            if (!command.HideFromDefaultView)
            {
                <DynamicInput ViewModel="viewModel" />
            }
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ConfigSection Section { get; set; } = null!;
}