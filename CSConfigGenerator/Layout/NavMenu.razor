@using System.Reflection
@inject IJSRuntime JSRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <a class="navbar-brand" href="">CSConfigGenerator</a>
            <span class="bi bi-info-circle text-white ms-2"
                  data-bs-toggle="popover"
                  data-bs-trigger="hover focus"
                  title="Version"
                  data-bs-content="@version"></span>
        </div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <button class="btn btn-link nav-link" @onclick="ToggleTheme">
                <span class="bi bi-moon-stars-fill-nav-menu" aria-hidden="true"></span> Toggle Theme
            </button>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="config/player">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Player Config
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="config/server">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Server Config
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reference">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Command Reference
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? version;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        version = typeof(NavMenu).Assembly.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializePopovers");
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task ToggleTheme()
    {
        await JSRuntime.InvokeVoidAsync("toggleTheme");
    }
}
